// ===== Including and Setting Up Keyboard Library =====
#include "Keyboard.h"

// ===== Pin Definitions =====
const byte PINS[] = {3, 6, 2, 7, 5, 4};

// ================================================================================
// ==============================      FIRMWARE      ==============================
// ================================================================================

void setup()
{
  for(int i = 0; i < sizeof(PINS)/sizeof(PINS[0]); i++)
  {
    pinMode(PINS[i], INPUT_PULLUP);
  }

  Keyboard.begin();
}

void loop()
{
  
}
